<!-- για το admin panel δεν κανουμε import τα navbar και footer γι αυτο και ξαναγραφουμε την εναρξη της html απο την αρχη -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel</title>
    <link rel="stylesheet" href="/static/styles.css" />
    <!-- bootstrap below -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <!-- these 2 are bootstrap scripts -->
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
      integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
      integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <!-- αρχικα κανουμε display τον τιτλο και μια επιγραφη στο πανω μερος του panel -->
      <div class="container-fluid ">
      <div class="row admin-title">
        <div class="col-3">
          <a href="/manage" class="title" data-link
            ><span id="title1">TRADdiction</span></a
          >
        </div>
        <div class="col-3">
          <h1>Admin Panel</h1>
        </div>
      </div>
    </div>
    <hr style="color: white;">
    <!-- το toggler που ειναι ορατο στις κινητες συσκευες, υπευθυνο για την πλοηγηση στις διαφορες κατηγοριες -->
    <div class="toggler d-md-none d-block">
      <div class="line1"></div>
      <div class="line2"></div>
      <div class="line3"></div>
    </div>
    <div class="container-fluid admin">
      <!-- οι διαφορες επιλογες που εχει ενας admin, παρουσιαζονται στην μορφη buttons με αναλογα forms που -->
      <!-- τον κατευθυνουν στο αναλογο view με καθε κλικ -->
      <div
        class="option">
        <form action="/manage" method="get">
        <button type="submit">Add Category</button>
      </form>
      </div>
      <div class="option"><form action="/manage/remove" method="get">
        <button type="submit">Remove Category</button>
      </form></div>
      <div class="option"><form action="/manage/approve" method="get">
        <button type="submit">Approve listings</button>
      </form></div>
      <div class="option"><form action="/manage/users" method="get">
        <button type="submit">View Users</button>
      </form></div>
      <div class="option"><form action="/manage/carousel" method="get">
        <button type="submit">Carousel Control</button>
      </form></div>
      <div class="option"><form action="/manage/contact" method="get">
        <button type="submit">Messages</button>
      </form></div>
      <div class="option"><form action="/logout?_method=DELETE" method="post">
        <button type="submit">Sign Out</button>
      </form></div>
      
      <!-- ουσιαστικα στο κατω div γινεται display καθε φορα το αναλογο view που εχει επιλεξει ο admin -->

      <div class="content">
          <%- include(`partials/${content}.ejs`,data) %> 
      </div>
    </div>
    <script type="module" src="/static/events.js"></script>

  </body>
</html>
